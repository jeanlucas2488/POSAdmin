package com.example.pixapp;

import android.graphics.Bitmap;
import android.os.Bundle;
import android.util.Log;
import android.view.View;
import android.widget.Button;
import android.widget.EditText;
import android.widget.ImageView;
import android.widget.TextView;
import android.app.Activity;

import com.google.zxing.BarcodeFormat;
import com.google.zxing.MultiFormatWriter;
import com.google.zxing.common.BitMatrix;
import com.google.zxing.WriterException;

import org.json.JSONObject;

import java.io.InputStream;
import java.io.OutputStream;
import java.net.HttpURLConnection;
import java.net.URL;

public class MainActivity extends Activity {

    private EditText edtValor;
    private Button btnGerarPix;
    private ImageView qrImageView;
    private TextView tvTxid;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        edtValor = (EditText) findViewById(R.id.edtValor);
        btnGerarPix = (Button) findViewById(R.id.btnGerarPix);
        qrImageView = (ImageView) findViewById(R.id.qrImageView);
        tvTxid = (TextView) findViewById(R.id.tvTxid);

        btnGerarPix.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                String valor = edtValor.getText().toString().trim();
                if (!valor.isEmpty()) {
                    new Thread(new Runnable() {
                        @Override
                        public void run() {
                            gerarPix(valor);
                        }
                    }).start();
                }
            }
        });
    }

    private void gerarPix(String valor) {
        try {
            URL url = new URL("http://192.168.0.5:3000/pix/gerar"); // IP Termux
            HttpURLConnection conn = (HttpURLConnection) url.openConnection();
            conn.setRequestMethod("POST");
            conn.setDoOutput(true);
            conn.setRequestProperty("Content-Type", "application/json");

            String jsonInput = "{\"valor\":\"" + valor + "\"}";
            OutputStream os = conn.getOutputStream();
            os.write(jsonInput.getBytes("UTF-8"));
            os.close();

            InputStream in = conn.getInputStream();
            StringBuilder sb = new StringBuilder();
            int ch;
            while ((ch = in.read()) != -1) {
                sb.append((char) ch);
            }
            in.close();

            JSONObject json = new JSONObject(sb.toString());
            final String txid = json.getString("txid");
            final String pixString = json.getString("pixCopiaECola");

            final Bitmap qrBitmap = gerarQRCode(pixString, 400, 400);

            runOnUiThread(new Runnable() {
                @Override
                public void run() {
                    qrImageView.setImageBitmap(qrBitmap);
                    tvTxid.setText("TXID: " + txid);
                }
            });

        } catch (Exception e) {
            e.printStackTrace();
            Log.e("PixApp", "Erro ao gerar Pix: " + e.getMessage());
        }
    }

    private Bitmap gerarQRCode(String texto, int width, int height) throws WriterException {
        BitMatrix bitMatrix = new MultiFormatWriter().encode(texto, BarcodeFormat.QR_CODE, width, height);
        Bitmap bmp = Bitmap.createBitmap(width, height, Bitmap.Config.RGB_565);
        for (int x = 0; x < width; x++) {
            for (int y = 0; y < height; y++) {
                bmp.setPixel(x, y, bitMatrix.get(x, y) ? 0xFF000000 : 0xFFFFFFFF);
            }
        }
        return bmp;
    }
}
